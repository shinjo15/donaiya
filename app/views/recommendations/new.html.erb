<div class="container-fluid title-margin title-bar">
  <div class="row h-100">
    <div class="col-8 h-100 mx-auto title-textbox">
      <div class="title h-100 d-flex align-items-center justify-content-center"><h1>Menu管理</h1></div>
    </div>
  </div>
</div>

<div class="container pb-5">
  <div class="row mb-40">
    <div class="col-sm-6">
        <% @foods.each do |food| %>
          <div class="row border-bottom border-dark mt-4">
            <div class="col-6 pt-4"><%= image_tag food.image, size: "240x180" %></div>
            <div class="col-6">
              <p class="middle d-flex justify-content-center"><%= food.name %></p>
              <div class="row pb-2">
                <div class="w-50"><p><%= food.tax_price %>円</p></div>
                <div class="w-50 d-flex justify-content-end"><%= link_to "編集", edit_recommendation_path(food.id), class: "btn btn-outline-success" %></div>
              </div>
              <p class="text small"><%= food.details %></p>
            </div>
          </div>
        <% end %>
    </div>

    <div class="col-sm-1"></div>

    <div class="col-sm-5">
      <h2 class="middle">新規登録</h2>
      <div class="my-40">
        <% if @food.errors.any? %>
          <p class="text text-danger"><b>全ての項目を入力してください</b></p>
        <% end %>

        <%= form_with model: @food, url: recommendations_path do |f| %>
          <div class="row mb-4">
            <label class="col-4 d-flex align-items-center"><b>料理画像</b></label>
            <%= f.file_field :image, accept: "image/*" %>
          </div>
          <div class="row mb-4">
            <label class="col-4 d-flex align-items-center"><b>料理名</b></label>
            <%= f.text_field :name, class: "col-8 form-control", placeholder: "商品名", style: "height: 50px" %>
          </div>
          <div class="row mb-4">
            <label class="col-4"><b>料理説明</b></label>
            <%= f.text_area :details,  class: "col-8 form-control", placeholder: "ここに説明文を記述します", style: "height: 150px" %>
          </div>
          <div class="row mb-4">
            <label class="col-4 d-flex align-items-center"><b>税込価格</b></label>
            <%= f.text_field :tax_price, class: "col-7 form-control", placeholder: "1000", style: "height: 50px" %><span class="col-1 d-flex align-items-center"><b>円</b></span>
          </div>
          <div class="row mt-5 mb-140">
            <div class="col-4"></div>
            <%= f.submit "新規登録", class: "btn-color" %>
          </div>
        <% end %>
        <span class="d-flex justify-content-center"><%= link_to "管理者Topに戻る", homes_admin_top_path, class: "col-4 btn btn-outline-dark" %></span>
      </div>
    </div>
  </div>
</div>
