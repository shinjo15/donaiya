<div class="container-fluid my-40 title-bar">
  <div class="row h-100">
    <div class="col-8 h-100 mx-auto title-textbox">
      <div class="title d-flex align-items-center justify-content-center">Takeout編集</div>
    </div>
  </div>
</div>
<div class="container my-40">
  <div class="my-40">
    <%= form_with model: @takeout_item, url: takeout_item_path do |f| %>
      <div class="row mb-4">
        <label class="col-4 d-flex align-items-center justify-content-center"><b>料理画像</b></label>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="row mb-4">
        <label class="col-4 d-flex align-items-center justify-content-center"><b>料理名</b></label>
        <%= f.text_field :takeout_name, class: "col-6 form-control", style: "height: 50px" %>
      </div>
      <div class="row mb-4">
        <label class="col-4 d-flex justify-content-center"><b>料理説明</b></label>
        <%= f.text_area :takeout_details,  class: "col-6 form-control", style: "height: 150px" %>
      </div>
      <div class="row mb-4">
        <label class="col-4 d-flex align-items-center justify-content-center"><b>税込価格</b></label>
        <%= f.text_field :tax_price, class: "col-5 form-control", style: "height: 50px" %><span class="col-3 d-flex align-items-center"><b>円</b></span>
      </div>
      <div class="row mb-4">
        <label class="col-4 d-flex align-items-center justify-content-center"><b>販売ステータス</b></label>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, '販売停止中', value: true, class: "mr-3" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '販売中', value: false %>
      </div>
      <div class="row mt-5 mb-140">
        <div class="col-4"></div>
        <div class="col-4"><%= f.submit "更新", class: "col-6 btn btn-success" %></div>
        <div class="col-4"><%= link_to "削除", takeout_item_path(@takeout_item.id), method: :delete, class: "col-6 btn btn-danger", "data-confirm" => "本当に削除しますか？"  %></div>
      </div>
    <% end %>
    <span class="d-flex justify-content-center"><%= link_to "更新せずに戻る", new_takeout_item_path, class: "col-4 btn btn-outline-dark" %></span>
  </div>
</div>
