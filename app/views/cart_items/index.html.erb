<div class="container-fluid p-0 background-gradient">
  <div class="under-header"></div>
  <div class="row my-40 mx-0 title-bar">
    <div class="col-8 p-0 h-100 mx-auto about-image">
      <div class="h-100 sub-title">
        <h1 class="title h-100 d-flex align-items-center justify-content-center">CART </h1>
      </div>
    </div>
  </div>
  <div class="row mx-0">
    <div class="w-80 mx-auto">
      <table>
        <thead class="col-12 border-bottom border-light">
          <th class="col-3"></th>
          <th class="col-3"><p class="text d-flex justify-content-center">商品情報</p></th>
          <th class="col-2"><p class="text d-flex justify-content-center">個数</p></th>
          <th class="col-2"><p class="text d-flex justify-content-center">支払金額</p></th>
          <th class="col-2"></th>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr class="border-bottom border-light">
            <td class="my-2"><%= image_tag cart_item.takeout_item.image, size: "300x225" %></td>
            <td><p class="middle d-flex justify-content-center"><%= cart_item.takeout_item.takeout_name %></p></td>
            <td><p class="middle d-flex justify-content-center"><%= cart_item.amount %></p></td>
            <td><p class="middle d-flex justify-content-center"><%= cart_item.takeout_item.tax_price %>円</p></td>
            <td><%= link_to "削除", takeout_item_cart_item_path(cart_item.takeout_item_id, cart_item.id), method: :delete, class: 'btn-delete' %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row w-80 mx-auto">
    <p class="w-100 title-margin text-right"><%= link_to  "カートの中身を空にする", cart_items_destroy_all_path, method: :delete, class: 'btn-delete radius-5' %></p>
  </div>
   <div class="row w-80 mx-auto">
    <p class="w-100 title-margin text-center"><%= link_to  "予約情報入力", cart_items_destroy_all_path, method: :delete %></p>
    <p class="w-100 title-margin text-right"><%= link_to  "予約情報入力", cart_items_destroy_all_path, method: :delete, class: 'btn-color radius-5' %></p>
  </div>
</div>