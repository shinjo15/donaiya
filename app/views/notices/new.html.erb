<div class="container-fluid title-margin title-bar">
  <div class="row h-100">
    <div class="col-8 h-100 mx-auto title-textbox">
      <div class="title h-100 d-flex align-items-center justify-content-center"><h1>お知らせ管理</h1></div>
    </div>
  </div>
</div>

<div class="container my-40">
  <div class="row">
    <div class="col-sm-7">
      <h2 class="middle d-flex justify-content-center">お知らせ一覧</h2>
      <div class="row my-40">
        <% @notices.each do |notice| %>
          <div class="card col-10 mb-3">
            <div class="card-body">
              <div class="card-body p-0">
                <p class="card-title middle"><small><%= notice.title %></small></p>
                <p class="card-text text"><small class="text-muted"><%= notice.updated_at %></small></p>
              </div>
            </div>
          </div>
          <p class="col-2 d-flex align-items-center justify-content-center"><%= link_to "編集", edit_notice_path(notice.id), class: "btn btn-outline-success" %></p>
        <% end %>
      </div>
    </div>

    <div class="col-sm-5">
      <h2 class="middle d-flex justify-content-center">新規登録</h2>
      <div class="my-40">
        <%= form_with model: @notice, url: notices_path do |f| %>
          <div class="row mb-4">
            <label class="col-4 d-flex align-items-center justify-content-center"><b>タイトル</b></label>
            <%= f.text_field :title, class: "col-6 form-control", style: "height: 50px" %>
          </div>
          <div class="row mb-4">
            <label class="col-4 d-flex justify-content-center"><b>内容</b></label>
            <%= f.text_area :notice_details,  class: "col-6 form-control", style: "height: 150px" %>
          </div>
          <div class="row mt-5 mb-140">
            <div class="col-4"></div>
            <%= f.submit "新規登録", class: "col-4 btn btn-success" %>
          </div>
        <% end %>
        <span class="d-flex justify-content-center"><%= link_to "管理者Topに戻る", homes_admin_top_path, class: "col-4 btn btn-outline-dark" %></span>
      </div>
    </div>
  </div>
</div>

