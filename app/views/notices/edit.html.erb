<div class="container-fluid my-40 title-bar">
  <div class="row h-100">
    <div class="col-8 h-100 mx-auto title-textbox">
      <div class="title d-flex align-items-center justify-content-center">お知らせ編集</div>
    </div>
  </div>
</div>
<div class="container my-40">
  <div class="my-40">
    <%= form_with model: @notice, url: notice_path do |f| %>
      <div class="row mb-4">
        <label class="col-4 d-flex align-items-center justify-content-center"><b>タイトル</b></label>
        <%= f.text_field :title, class: "col-6 form-control", style: "height: 50px" %>
      </div>
      <div class="row mb-4">
        <label class="col-4 d-flex justify-content-center"><b>内容</b></label>
        <%= f.text_area :notice_details,  class: "col-6 form-control", style: "height: 150px" %>
      </div>
      <div class="row mt-5 mb-140">
        <div class="col-4"></div>
        <div class="col-4"><%= f.submit "更新", class: "col-6 btn btn-success" %></div>
        <div class="col-4"><%= link_to "削除", notice_path(@notice.id), method: :delete, class: "col-6 btn btn-danger", "data-confirm" => "本当に削除しますか？"  %></div>
      </div>
    <% end %>
    <span class="d-flex justify-content-center"><%= link_to "更新せずに戻る", new_notice_path, class: "col-4 btn btn-outline-dark" %></span>
  </div>
</div>

