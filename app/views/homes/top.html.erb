    <div class="row my-40">
      <div class="col-8 p-0 h-100 mx-auto">
        <div class="title text-light h-100 d-flex align-items-center justify-content-center"><h1>お知らせ</h1></div>
      </div>
    </div>
    <div class="row w-85 mx-auto">
      <div class="row w-100 mx-0 my-40">
        <% @notices.each do |notice| %>
        <%= link_to notice_path(notice.id), class: "row col-12 text-dark" do  %>
          <div class="card w-100 mb-3">
            <div class="card-body">
              <div class="row">
                <h3 class="middle col-9"><%= notice.title %></h3>
              <p class="text col-3 d-flex align-items-center justify-content-center"><small><%= notice.updated_at %></small></p>
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
      <div class="row w-100 mx-0 mb-140">
        <p class="w-100 title-margin text-center"><%= link_to "Topへ戻る", root_path, class: "btn-color" %></p>
